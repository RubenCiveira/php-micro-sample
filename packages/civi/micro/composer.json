{
    "name": "civi/micro",
    "autoload": {
        "psr-4": {
            "Civi\\Micro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/src/"
        }
    },
    "authors": [
        {
            "name": "Ruben civeira",
            "email": "ruben.civeira@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "vlucas/phpdotenv": "^5.6",
        "symfony/yaml": "^7.2",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.7",
        "open-telemetry/api": "^1.2",
        "promphp/prometheus_client_php": "^2.12",
        "psr/log": "^3.0",
        "open-telemetry/opentelemetry-logger-monolog": "^1.1",
        "open-telemetry/sdk": "^1.2",
        "jimdo/prometheus_client_php": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "vimeo/psalm": "^6.10"
      },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "tbachert/spi": false
        }
    }
}
