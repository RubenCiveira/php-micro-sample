{% extends 'base.html.twig' %}

{% block title %}Dashboard - Gestor de Aplicaciones{% endblock %}

{% block content %}
    <h2 class="mt-4">El Dashboard</h2>
    <p class="mb-6">Bienvenido al sistema de gestión de aplicaciones y despliegues.</p>
    
    {% grid %}
        {% card 
            width="4"
            title="Credenciales" 
            text="Gestiona tus credenciales para conectarte y descargar paquetes publicados." %}
          {% cardAction url=path('credentials') %} Gestionar {% endcardAction %}
        {% endcard %}
        {% card
            width="4"
            title="Paquetes"
            text="Administra los paquetes y dependencias de tus aplicaciones." %}
          {% cardAction url=path('packages') %} Gestionar {% endcardAction %}
        {% endcard %}
        {% card
            width="4"
            title="Configuracion"
            text="Configura los parámetros del sistema y personaliza tu experiencia." %}
          {% cardAction url=path('configuration') %} Gestionar {% endcardAction %}
        {% endcard %}
    {% endgrid %}

{% endblock %}